<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSayfaB" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/AnasayfaRenk"
        tools:context=".FragmentAnasayfa">

        <Button
            android:id="@+id/MetiniGonderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="204dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="22dp"
            android:backgroundTint="@color/Grimsi"
            android:hint="Metini Gönder"
            android:textColor="@color/Beyaz"
            android:textColorHint="@color/Beyaz"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="354dp"
            android:layout_height="263dp"
            android:layout_marginTop="11dp"

            android:background="@drawable/email_text"
            android:backgroundTint="@color/Beyaz"
            android:ems="10"
            android:hint=" Metin"
            android:inputType="textEmailAddress"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/solway_medium"
            android:text="Aşağıdaki metin alanına kendinizi anlatan bir yazı yazınız."
            android:textColor="@color/Beyaz"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.253"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>