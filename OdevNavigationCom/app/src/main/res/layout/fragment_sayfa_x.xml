<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSayfaX" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/AnasayfaRenk"
        tools:context=".FragmentAnasayfa">

        <Button
            android:id="@+id/kayitOlButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="26dp"
            android:backgroundTint="@color/Grimsi"
            android:hint="Kayıt ol"
            android:textColor="@color/Beyaz"
            android:textColorHint="@color/Beyaz"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EmailEditText" />

        <EditText
            android:id="@+id/SoyisimEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="76dp"
            android:background="@drawable/email_text"

            android:backgroundTint="@color/Beyaz"
            android:ems="10"
            android:hint=" Soyisim giriniz"
            android:inputType="textEmailAddress"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/isimEditText" />

        <EditText
            android:id="@+id/isimEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="76dp"
            android:background="@drawable/email_text"

            android:backgroundTint="@color/Beyaz"
            android:ems="10"
            android:hint=" İsim giriniz"
            android:inputType="textEmailAddress"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/SifreEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="76dp"
            android:background="@drawable/email_text"

            android:backgroundTint="@color/Beyaz"
            android:ems="10"
            android:hint=" Şifre giriniz"
            android:inputType="textEmailAddress"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/YasEditText" />

        <EditText
            android:id="@+id/YasEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="76dp"
            android:background="@drawable/email_text"

            android:backgroundTint="@color/Beyaz"
            android:ems="10"
            android:hint=" Yaş giriniz"
            android:inputType="textEmailAddress"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SoyisimEditText" />

        <EditText
            android:id="@+id/EmailEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="76dp"
            android:background="@drawable/email_text"

            android:backgroundTint="@color/Beyaz"
            android:ems="10"
            android:hint=" E-mail giriniz"
            android:inputType="textEmailAddress"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SifreEditText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>